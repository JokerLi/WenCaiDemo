<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <TextView
        android:id="@+id/item_scene_child_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="7dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_below="@+id/item_scene_child_divide"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <com.wencai.demo.views.BottomIcon
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            app:img="@mipmap/bulldog"
            app:text="回家"
            app:textcolor="#707070"
            app:textsize="17" />

        <com.wencai.demo.views.BottomIcon
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            app:img="@mipmap/cat"
            app:text="离家"
            app:textcolor="#707070"
            app:textsize="17" />

        <com.wencai.demo.views.BottomIcon
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            app:img="@mipmap/chameleon"
            app:text="起床"
            app:textcolor="#707070"
            app:textsize="17" />

        <com.wencai.demo.views.BottomIcon
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            app:img="@mipmap/clown_fish"
            app:text="睡觉"
            app:textcolor="#707070"
            app:textsize="17" />
    </LinearLayout>
</RelativeLayout>